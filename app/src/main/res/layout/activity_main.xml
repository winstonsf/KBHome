<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.promenade.android.kbhome.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/metro"/>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kblogo"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:background="#70000000"
        android:layout_alignParentBottom="true"
        android:text="METRO AT COMMUNICATIONS HILL" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="NEW HOMES FOR SALE – SAN JOSE" />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="PRICED FROM $752,415 – $824,234" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Sales Office \n3112 Manuel Street., Unit 1 \nSan Jose, CA 95136 \n(408) 693-8445 \n\nMonday: 1:00PM - 6:00PM \nTuesday - Sunday: 10:00AM - 6:00PM" />

</RelativeLayout>
